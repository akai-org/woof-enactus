generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Partner {
  id          Int         @id @default(autoincrement())
  uuid        String      @unique @default(uuid())
  name        String
  slug        String      @unique
  latitude    Float       @default(0)
  longitude   Float       @default(0)
  profile     PartnerProfile?
  neededGoods NeededGoods[]
  type        PartnerType
}

model PartnerProfile {
  id          Int     @id @default(autoincrement())
  uuid        String  @unique @default(uuid())
  partner     Partner @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  partnerId   Int     @unique
  description String?
  getToInfo   String?
  city        String?
  street      String?
  postal      String?
  phone       String?
  website     String?
  animals     String[]
  visitHours  String?
  openHours   WorkingHours?
  email       String?
  image       String?
}

model WorkingHours {
  id          Int             @id @default(autoincrement())
  uuid        String          @unique @default(uuid())
  profile     PartnerProfile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   Int             @unique
  monday      String
  tuesday     String
  wednesday   String
  thursday    String
  friday      String
  saturday    String
  sunday      String
}

enum PartnerType {
  VET
  ORG
  SHOP
  SHELTER
}

model NeededGoods {
  id              Int     @id @default(autoincrement())
  uuid            String  @unique @default(uuid())
  partner         Partner @relation(fields: [partnerId], references: [id], onDelete: Cascade)
  partnerId       Int     @unique
  name            String
  note            String?
  amountCurrent   Int?
  amountMax       Int
  amountUnit      String?
  state           GoodsState
  stateInfo       String?
}

enum GoodsState {
  OK
  MEDIUM
  LOW
}